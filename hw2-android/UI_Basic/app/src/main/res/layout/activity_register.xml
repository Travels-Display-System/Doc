<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.user.RegisterActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/reg_cv_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/reg_iv_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/et_username"
        app:layout_constraintTop_toBottomOf="@id/reg_cv_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_line"
        android:hint="Enter User Name Please"
        android:textColor="@color/word_color"
        android:textColorHint="@color/grey"
        android:textSize="15sp"
        android:maxLength="30"
        android:paddingLeft="15dp"
        ></EditText>
    <EditText
        android:id="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_line"
        android:hint="Enter Password Please more than 6 char"
        android:textColor="@color/word_color"
        android:inputType="textPassword"
        android:textColorHint="@color/grey"
        android:textSize="15sp"
        android:maxLength="30"
        android:paddingLeft="15dp"
        ></EditText>

    <EditText
        android:id="@+id/et_email"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_line"
        android:hint="Enter Password Please"
        android:textColor="@color/word_color"
        android:textColorHint="@color/grey"
        android:textSize="15sp"
        android:maxLength="30"
        android:paddingLeft="15dp"
        ></EditText>
    <Button
        android:id="@+id/et_submit"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button"
        android:text="register"
        android:textAllCaps="false"
        android:textSize="15sp"
        >
        ></Button>
<TextView
    android:id="@+id/go_to_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:textSize="13sp"
    android:text="Go to Login"
    android:textColor="@color/word_color"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>